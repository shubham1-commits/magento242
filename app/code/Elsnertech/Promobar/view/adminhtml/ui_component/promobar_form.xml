        <field name="promobar_container">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="elementTmpl" xsi:type="string">Elsnertech_Promobar/form/element/promobar_container</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <!-- <item name="cols" xsi:type="number">15</item>
                    <item name="rows" xsi:type="number">5</item> -->
                    <item name="label" translate="true" xsi:type="string">Textarea Field Example</item>
                    <item name="dataType" translate="true" xsi:type="string">textarea</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="source" xsi:type="string">promobar_container</item>
                    

                </item>
            </argument>
        </field>




        <container name="general_container">
          <argument name="data" xsi:type="array">
              <item name="config" xsi:type="array">
                  <item name="sortOrder" xsi:type="string">100</item>
              </item>
          </argument>
          <htmlContent name="html_content">
              <argument name="block" xsi:type="object">Elsnertech\Promobar\Block\Adminhtml\Product\CustomTab</argument>
          </htmlContent>
      </container>
   </fieldset>

</form>