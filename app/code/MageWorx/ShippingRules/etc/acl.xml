<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="MageWorx_ShippingRules::shippingrules" sortOrder="40" title="MageWorx Shipping Suite">
                        <resource id="MageWorx_ShippingRules::quote" sortOrder="40" title="Shipping Rules &amp; Restrictions (by MageWorx)" />
                        <resource id="MageWorx_ShippingRules::carrier" sortOrder="45" title="Manage Carriers &amp; Shipping Methods (by MageWorx)" />
                        <resource id="MageWorx_ShippingRules::zone" sortOrder="50" title="Shipping Zones (by MageWorx)" />
                        <resource id="MageWorx_ShippingRules::region" sortOrder="55" title="Manage Country Regions (by MageWorx)" />
                        <resource id="MageWorx_ShippingRules::extended_zones" sortOrder="60" title="Manage Pop-up Zones (by MageWorx)" />
                    </resource>
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config" title="Configuration" sortOrder="20">
                            <resource id="MageWorx_ShippingRules::config_shippingrules" title="Shipping Rules Section (by MageWorx)" sortOrder="90" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::system">
                    <resource id="Magento_Backend::convert">
                        <resource id="MageWorx_ShippingRules::import_export" title="Import/Export Carriers/Methods/Rates (by MageWorx)" sortOrder="40" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
